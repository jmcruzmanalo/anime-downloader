{
  "name": "anime-torrent-downloader",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=development tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "reset": "rimraf db/database.db && rimraf dist/downloads",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/graphql": "^6.5.1",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-socket.io": "^6.6.7",
    "@nestjs/serve-static": "^1.0.1",
    "@nestjs/typeorm": "^6.1.3",
    "@nestjs/websockets": "^6.6.7",
    "apollo-server-express": "^2.9.3",
    "axios": "^0.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "clone": "^2.1.2",
    "config": "^3.2.2",
    "graphql": "^14.5.6",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^4.0.5",
    "lodash": "^4.17.15",
    "nyaapi": "^2.1.0",
    "open-file-explorer": "^1.0.2",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.7.1",
    "rxjs": "^6.3.3",
    "sqlite3": "^4.1.0",
    "subscriptions-transport-ws": "^0.9.16",
    "type-graphql": "^0.17.5",
    "typeorm": "^0.2.18",
    "webtorrent": "^0.107.16"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/clone": "^0.1.30",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/lodash": "^4.14.138",
    "@types/node": "11.13.4",
    "@types/rimraf": "^2.0.2",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "2.0.7",
    "@types/webtorrent": "^0.107.0",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
